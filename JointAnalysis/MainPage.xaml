<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:JointAnalysis;assembly=JointAnalysis" x:Class="JointAnalysis.MainPage" Padding="0,20,0,0" Title="Main Page">
    <!-- Source: https://github.com/xamarin/xamarin-forms-samples/tree/master/CustomRenderers/View -->
    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <local:CamPreview Camera="Rear" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
        <StackLayout>
            <Button x:Name="takePhoto" Text="Take Photo" BackgroundColor="Orange" />
            <Button x:Name="takeVideo" Text="Take Video" BackgroundColor="Orange" />
            <ScrollView>
                <StackLayout x:Name="ImageList">
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </StackLayout>
</ContentPage>